@{
    ViewBag.Title = "Управление";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Изменение параметров учетной записи @User.Identity.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Пароль:</dt>
        <dd>
            @Html.ActionLink("Смена пароля", "ChangePassword")
        </dd>
        <dt>Удаление:</dt>
        <dd>
            @Html.ActionLink("Удаление учетной записи", "DeleteAccount")
        </dd>
    </dl>
</div>
